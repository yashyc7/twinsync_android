<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@drawable/glass_background"
    android:elevation="8dp">

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/glass_header"
        android:padding="6dp"
        android:layout_marginBottom="8dp"
        android:elevation="4dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TwinSync"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#222222" />

        <Button
            android:id="@+id/refresh_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text="🔄"
            android:textSize="12sp"
            android:background="@drawable/glass_button"
            android:textColor="#000000" />
    </LinearLayout>

    <!-- My Mood Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/glass_background"
        android:padding="8dp"
        android:layout_marginBottom="8dp"
        android:elevation="4dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Mood"
                android:textSize="12sp"
                android:textColor="#555555" />

            <TextView
                android:id="@+id/my_mood_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#222222" />
        </LinearLayout>

        <Button
            android:id="@+id/update_mood_button"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:text="Update"
            android:textSize="10sp"
            android:background="@drawable/glass_button"
            android:textColor="#000000"
            android:paddingHorizontal="12dp"
            android:paddingVertical="4dp" />
    </LinearLayout>

    <!-- Partner Data Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/glass_background"
        android:padding="8dp"
        android:elevation="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Partner Info"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#1976D2"
            android:layout_marginBottom="4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/partner_mood"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="😊 --"
                    android:textSize="11sp"
                    android:textColor="#333333"
                    android:layout_marginBottom="2dp" />

                <TextView
                    android:id="@+id/partner_battery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🔋 --"
                    android:textSize="11sp"
                    android:textColor="#333333"
                    android:layout_marginBottom="2dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/partner_gps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="📍 --"
                    android:textSize="11sp"
                    android:textColor="#1976D2"
                    android:background="@drawable/glass_button"
                    android:padding="2dp"
                    android:layout_marginBottom="2dp" />

                <TextView
                    android:id="@+id/last_updated_on"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🕒 --"
                    android:textSize="10sp"
                    android:textColor="#666666" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
